page {
  background-color: #ffffff;
  height: 100%;
  width: 100%;
}
.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  text-align: center;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.top_view{
  width: 100%;
  height: 60%;
}

.main_icon_view{
  width: 100%;
  height: calc(100% - 180px);
  display: flex;
  justify-content: center;
  align-items: center;
}

.main_icon{
  width: 80px;
  height: 80px;
}

.login_btn_view{
  width: 100%;
  height: 180px;
  box-sizing: border-box;
  padding: 0px 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

t-input__wrap--prefix{
  width: 48px;
  height: 48px;
}

.login_btn_view .t-input{
  padding: 0px !important;
  flex: unset;
}

.login_btn_view .t-input__wrap{
  height: 48px !important;
  line-height: 48px !important;
  padding-left: 6px;
}

.login_btn_view .t-input__control{
  font-weight: 500 !important;
  font-size: 15px !important;
  color: gray !important;
}

.login_btn_view .t-input__placeholder{
  font-size: 15px !important;
}

.prefix_image{
  width: 20px;
  height: 20px;
}

.t-input__icon--prefix{
  display: flex;
  justify-content: center;
  align-items: center;
}

.verify{
  font-size: 15px;
  color: #0052D9;
}

.getPhone{
  font-size: 15px;
  color: #0052D9;
}

.verify_count_down{
  font-size: 15px;
  color: gray;
}

.login_btn{
  background-color: #0052D9 !important;
  border-color: #0052D9 !important;
  color: #ffffff !important;
  width: 100%;
  height: 48px;
  line-height: 48px;
  border-radius: 24px !important;
  font-weight: 500 !important;
}

.checkbox_view{
  width: 100%;
  height: 32px;
  line-height: 32px;
  display: flex;
  flex-direction: row;
  padding: 0px 20px;
  margin-top: 28px;
}

.t-checkbox--block{
  padding: 0px !important;
  justify-content: center;
  align-items: center;
}

.t-checkbox__content{
  display: none;
}

.t-checkbox__border{
  display: none;
}

.text1{
  font-size: 15px;
  color: #333333;
  font-weight: normal;
}

.text2{
  font-size: 15px;
  margin-left: 2px;
  color: #0052D9;
  font-weight: normal;
}

.desc{
  margin-top: 12px;
  padding: 0px 20px;
  box-sizing: border-box;
  width: 100%;
  height: auto;
  font-size: 14px;
  text-align: left;
  font-weight: 300;
  color: #818181;
}

.login_view{
  width: 100%;
  height: 22px;
  margin-top: 8px;
  box-sizing: border-box;
  padding-left: 20px;
  text-align: left;
}

.login_icon{
  width: 45px;
  height: 22px;
}
